{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.12.0/.schema/devbox.schema.json",
  "packages": [
    "kind@latest",
    "docker@latest",
    "kubectl@latest",
    "gnumake@latest",
    "python3@latest"
  ],
  "env": {
    "VENV_DIR": "venv",
    "UV_PYTHON": "venv/bin/python"
  },
  "shell": {
    "init_hook": [
      ". $VENV_DIR/bin/activate",
      "pip install --upgrade uv",
      "uv pip install -r requirements.txt"
    ]
  }
}
